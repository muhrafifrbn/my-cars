---
import heroImage from "../assets/img/hero2.png"
import { Image } from 'astro:assets';
import IndexLayout from "../layouts/index.astro"
import logoBmw from "../assets/img/logo-bmw.png"
import logoPorsche from "../assets/img/logo-porsche.png"
import logoMercedes from "../assets/img/logo-mercedes.png"
import logoVolkswagen from "../assets/img/logo-volkswagen.png"
import logoLamborghini from "../assets/img/logo-lamborghini.png"
import carGallardo from "../assets/img/Gambar-mobil/car-1.jpg"
import carScirocco from "../assets/img/Gambar-mobil/car-2.jpg"
import carBmw435i from "../assets/img/Gambar-mobil/car-3.jpg"
import carMercyG63 from "../assets/img/Gambar-mobil/car-4.jpg"
import carCarrera from "../assets/img/Gambar-mobil/car-5.jpg"
import CarImage from "../components/ImageCar.astro"
import HeroSection from "../components/heroSection.astro"
import logoFerrari from "../assets/img/logo-ferrari.png"
---

<IndexLayout>
			<HeroSection style={{ bgParrent:"bg-sky-950", bgChild:"bg-white" }}>
           	 	<Image slot="image-section" src={heroImage} alt="A bird sitting on a nest of eggs." />
			</HeroSection>
			<section id="logo-brand" class="p-10">
				<div id="efek" class="flex bg-neutral-100 shadow-lg justify-evenly flex-wrap border py-5 rounded-bl-3xl rounded-tr-3xl">
					<div class="w-24  lg:w-48 ">
						<Image  class="image w-full grayscale hover:grayscale-0 transition hover:scale-110" src={logoBmw} alt="brand-bmw"/>
					</div>
					<div class="w-16  lg:w-28 flex justify-center">
						<Image class="image sm:w-36 w-20  grayscale hover:grayscale-0 transition hover:scale-110" src={logoPorsche} alt="brand-porsche"/>
					</div>
					<div class="w-24  lg:w-52">
						<Image class="image w-full grayscale hover:grayscale-0 transition hover:scale-110" src={logoLamborghini} alt="brand-lamborghini"/>
					</div>
					<div class="w-24  lg:w-48">
						<Image class="image w-full grayscale hover:grayscale-0 transition hover:scale-110" src={logoMercedes} alt="brand-mercedes"/>
					</div>	
					<div class="w-24  lg:w-48">
						<Image class="image w-full grayscale hover:grayscale-0 transition hover:scale-110" src={logoFerrari} alt="brand-mercedes"/>
					</div>	
					<div class="w-24  lg:w-48">
						<Image class="image w-full grayscale hover:grayscale-0 transition hover:scale-110" src={logoVolkswagen} alt="brand-mercedes"/>
					</div>	
				</div>
			</section>
			<section id="gallery" class="bg-black pt-16 pb-10">
				<div class="flex flex-wrap ">
					<CarImage url={carGallardo} class={{ parrent:"overflow-hidden w-full transition lg:w-1/2 relative", content: "sm:text-7xl" }} text="Lamborghini Gallardo"/>
					<div class="w-full lg:w-1/2 mt-5 lg:mt-0 flex flex-wrap gap-3 justify-center">
						<CarImage url={carScirocco} class={{ parrent:"overflow-hidden w-[45%] transition  relative", content: "sm:text-4xl" }} text="Sciroco"/>
						<CarImage url={carMercyG63} class={{ parrent:"overflow-hidden w-[45%] transition  relative", content: "sm:text-4xl" }} text="Mercedes G63"/>
						<CarImage url={carBmw435i} class={{ parrent:"overflow-hidden w-[45%] transition  relative", content: "sm:text-4xl" }} text="Bmw 435i"/>
						<CarImage url={carCarrera} class={{ parrent:"overflow-hidden w-[45%] transition relative", content: "sm:text-4xl" }} text="Porsche Carrera"/>
						
					</div>
				</div>
				<div class="pt-5 flex justify-between px-16 items-center  flex-wrap gap-3">
					<div class="text-white w-full md:w-1/2">
						<p class="text-xl lg:text-3xl font-semibold text-orange-500 font-protestStrike">INVENTORY</p>
						<p class="py-2 text-md lg:text-xl font-montserrat">Find out more about your favorite car!</p>
					</div>
					<div class="w-full md:w-auto flex justify-end">
						<a href="/my-cars/allCars" class="font-montserrat transition inline-block py-1 lg:py-2 px-5 lg:px-11 text-lg rounded-lg  text-orange-500 hover:text-white hover:bg-orange-500  text-center border-orange-500 ring-2 ring-orange-500">View All</a>
					</div>
				</div>
			</section>
			
